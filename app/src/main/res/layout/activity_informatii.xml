<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InformatiiActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:padding="20dp"
                    android:text="Introdu datele necesare construirii profilului tău!"/>



                <EditText
                    android:id="@+id/info_et_nume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nume" />

                <EditText
                    android:id="@+id/info_et_prenume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Prenume" />

                <EditText
                    android:id="@+id/info_et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email" />

                <EditText
                    android:id="@+id/info_et_nr_telefon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Număr de telefon" />

                <EditText
                    android:id="@+id/info_et_nr_cazuri_rezolvate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Număr cazuri rezolvate" />

                <EditText
                    android:id="@+id/info_et_nr_cazuri_pierdute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Număr cazuri pierdute" />

                <EditText
                    android:id="@+id/info_et_specializare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Specializare" />
                <EditText
                    android:id="@+id/info_et_specializare_precizare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Precizare.Exemplu: asigurări, societăți comerciale" />

                <TextView
                    android:id="@+id/info_tv_adresa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Adresă:"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/info_et_oras"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Oraș" />

                <EditText
                    android:id="@+id/info_et_strada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Stradă" />

                <EditText
                    android:id="@+id/info_et_nr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Număr bloc/casa" />
                <Button
                    android:id="@+id/info_btn_salveaza"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="24dp"
                    android:backgroundTint="@color/grenaInchis"
                    android:text="Salvează"
                    android:textColor="@color/colorAccent" />



            </LinearLayout>
    </ScrollView>



</RelativeLayout>
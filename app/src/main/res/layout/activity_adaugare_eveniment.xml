<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdaugareEvenimentActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp">

        <ListView
            android:id="@+id/adgeveniment_lv_evenimente"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scrollbarAlwaysDrawVerticalTrack="true"></ListView>


    </FrameLayout>

    <Button
        android:id="@+id/adgeveniment_btn_adauga"
        android:layout_width="85dp"
        android:text="Adauga"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/colorPrimary"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="74dp" />

    <TextView
        android:id="@+id/adgeveniment_tv_mesaj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="203dp"
        android:textAlignment="center"
        android:textSize="15dp" />


</RelativeLayout>
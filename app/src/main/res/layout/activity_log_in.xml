<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/flower"
    tools:context=".LogInActivity">
    <ImageView
        android:id="@+id/log_in_client__imv"
        android:layout_width="164dp"
        android:layout_height="123dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        app:srcCompat="@drawable/account" />

    <EditText
        android:id="@+id/log_in_client_et_parola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:layout_marginBottom="182dp"
        android:drawableLeft="@drawable/ic_login_black_lacatel"
        android:ems="10"

        android:hint="@string/LogInParola"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/log_in_client_et_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawableLeft="@drawable/ic_face_login"
        android:ems="10"
        android:hint="@string/LogInEmail"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/log_in_client_btn_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="98dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/grenaInchis"
        android:text="@string/Buton_log_in_avocat" />

    <Button
        android:id="@+id/log_in_btn_client_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="38dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/grenaInchis"
        android:text="@string/buton_sign_up"
        android:textColor="@color/colorAccent" />

</RelativeLayout>
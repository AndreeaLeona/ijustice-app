<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DespreClientActivity">

    <FrameLayout
        android:layout_width="341dp"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="38dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/despre_client_et_nume"
                    android:layout_width="match_parent"
                    android:hint="Nume"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_face_login" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/despre_client_et_adresa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Adresă"
                    android:drawableLeft="@drawable/ic_place_black" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/despre_client_et_telefon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Număr de telefon"
                    android:drawableLeft="@drawable/ic_phone_black" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/despre_client_et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Adresă de email"
                    android:drawableLeft="@drawable/ic_email_black_24dp" />
            </android.support.design.widget.TextInputLayout>


        </LinearLayout>


    </FrameLayout>

    <Button
        android:id="@+id/despre_client_btn_salveaza"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:backgroundTint="@color/grenaInchis"
        android:text="Salvează" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:textSize="20dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="42dp"
        android:text="Introdu datele necesare construirii profilului tău!" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SchimbaParolaActivity">

    <TextView
        android:id="@+id/tv_indicatieparola"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="Introdu noua parolă:"
        android:textSize="15dp"
        android:paddingLeft="20dp"
        android:textStyle="bold" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="155dp">

        <EditText
            android:id="@+id/et_parola_schimba"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="20dp"
            android:hint="Parolă" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/schimba_btn_schimba_"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="59dp"
        android:backgroundTint="@color/grenaInchis"
        android:text="Schimbă" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:padding="20dp"
        android:drawableTop="@drawable/ic_info_outline_black_24dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="În cazul în care nu te-ai autentificat recent, te rog sa te reautentifici pentru a seta o nouă parolă!" />

</RelativeLayout>
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_profil_email_hint"
        android:layout_width="wrap_content"
        android:textSize="15dp"
        android:text="Email: "
        android:textStyle="bold"
        android:layout_height="wrap_content" />

</RelativeLayout>
            <RelativeLayout
